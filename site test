    <script>
        const welcomePage = document.getElementById('welcomePage');
        const servicesPage = document.getElementById('servicesPage');
        const enterBtn = document.getElementById('enterBtn');
        const servicesTable = document.getElementById('servicesTable');

        // Mostra a página de serviços quando o botão "Entrar" é clicado
        enterBtn.addEventListener('click', () => {
            welcomePage.classList.add('hidden');
            servicesPage.classList.remove('hidden');
        });

        // Lógica de expansão da tabela de serviços
        servicesTable.addEventListener('click', (e) => {
            const row = e.target.closest('tr[data-target]');
            if (!row) return;

            const targetId = row.dataset.target;
            const targetElement = document.getElementById(targetId);
            const arrowIcon = row.querySelector('.arrow');

            if (targetElement) {
                targetElement.classList.toggle('hidden');
                arrowIcon.classList.toggle('rotate-90');
            }
        });
    </script>
